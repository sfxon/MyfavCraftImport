{% block myfav_craft_import_article %}
    <sw-page class="myfav-craft-import-article myfav-craft-imported-article">
        <template #content>
            <sw-card class="myfav-craft-import-main-card" positionIdentifier="myfavCraftImportArticleSearchCard">
                <div class="myfav-craft-import-search-container">
                    <div class="col-search-term">
                        <sw-text-field
                            :label="$t('myfav-craft-import.article.inputTextSearchTerm')"
                            @keydown.enter="searchForSearchTerm"
                            :placeholder="$t('myfav-craft-import.article.inputTextSearchTerm')"
                            v-model="searchTerm"
                        />
                    </div>
                    <div class="col-search">
                        <sw-button
                            @click="searchForSearchTerm"
                            variant="primary"
                        >
                            {{ $t('myfav-craft-import.article.btnSearchForArticle') }}
                        </sw-button>
                    </div>
                </div>
            </sw-card>

            <sw-card class="myfav-craft-import-main-card" positionIdentifier="myfavCraftImportArticleSearchResult">
                <div class="myfav-craft-import-search-result-container">
                    <sw-entity-listing
                        v-if="result"
                        :items="result"
                        :repository="myfavCraftImportArticleRepository"
                        :columns="columns"
                        :is-loading="isLoading"
                        :criteria="criteria"
                        :show-selection="false"
                        @paginate="onPaginate"
                    >
                        <template #column-craftProductNumber="{ item }">
                            <span style="margin-right: 12px;">{{ item.craftProductNumber }}</span>
                            <router-link 
                                v-bind:to="{ name: 'myfav.craft.import.selectVerein', params: { myfavCraftImportArticleId: item.id } }"
                                ref="routerLink"
                                class="sw-search-bar-item__link">
                                (Vereine zuweisen)
                            </router-link>
                        </template>

                        <template #column-createdAt="{ item }">
                            <sw-time-ago
                                :date="item.createdAt"
                                :date-time-format="{ month: '2-digit', day: '2-digit' }"
                            />
                        </template>
                    </sw-entity-listing>
                </div>
            </sw-card>
        </template>
    </sw-page>
{% endblock %}